@page "/addresses"
@inject HttpClient Http
@using RTM_Blazor.Client.Shared

<h4>Addresses</h4>
<div>
@if (addresses == null)
{
    <p><em>Loading Addresses...</em></p>
}
else
{
    <table class="table table-hover table-bordered table-responsive-md">
    <caption>List of Addresses</caption>
        <thead class="thead-dark">
            <tr>
                <th>Customer Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Job History</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AddressDTO address in addresses)
            {
                <tr>
                    <td> @address.CustomerName </td>
                    <td> @address.Address1 @address.Address2 </td>
                    <td> @address.City </td>
                    <td> @address.State </td>
                    <td> @address.PostalCode </td>
                    <td> @address.Country </td>
                    <td> 
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Job History
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @foreach (var job in address.JobHistory) {
                                    <a class="dropdown-item" href="#"> JobNumber: @job </a>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
</div>

@functions {
    List<AddressDTO> addresses;

    protected override async Task OnInitAsync()
    {
        Http.BaseAddress = new Uri("http://127.0.0.1:5555");
        await RefreshAddresses();
    }

    private async Task RefreshAddresses() {
        Http.BaseAddress = new Uri("http://127.0.0.1:5555");
        var retrieveAddresses = await Http.GetJsonAsync<AddressDTO[]>("/api/Address");
        addresses = retrieveAddresses.ToList().OrderBy(x => x.CustomerName).ToList();
        StateHasChanged();
    }
}